{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": false,
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "removeComments": true,
        "declaration": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "src/**/*.stories.*",
        "src/**/__tests__/**",
        "src/**/__mocks__/**"
    ]
}