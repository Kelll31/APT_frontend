{
    "compilerOptions": {
        // === БАЗОВЫЕ НАСТРОЙКИ ===
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "vite/client",
            "node"
        ],
        // === REACT И JSX ===
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        // === СТРОГИЕ ПРОВЕРКИ ТИПОВ ===
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": false,
        // === ДОПОЛНИТЕЛЬНЫЕ ПРОВЕРКИ ===
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "allowUmdGlobalAccess": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "useUnknownInCatchVariables": true,
        // === ИМПОРТЫ И МОДУЛИ ===
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": false,
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        // === НАСТРОЙКИ ВЫВОДА ===
        "noEmit": true,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "incremental": true,
        // === PATH MAPPING ===
        "baseUrl": ".",
        "paths": {
            // Корневые алиасы
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/pages/*": [
                "src/pages/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/services/*": [
                "src/services/*"
            ],
            "@/stores/*": [
                "src/stores/*"
            ],
            "@/types/*": [
                "src/types/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ],
            "@/styles/*": [
                "src/styles/*"
            ],
            "@/assets/*": [
                "src/assets/*"
            ],
            // Компоненты по категориям
            "@/common/*": [
                "src/components/common/*"
            ],
            "@/features/*": [
                "src/components/features/*"
            ],
            "@/charts/*": [
                "src/components/charts/*"
            ],
            "@/layout/*": [
                "src/components/layout/*"
            ],
            // Специфичные для проекта
            "@/scanner/*": [
                "src/components/features/Scanner/*"
            ],
            "@/reports/*": [
                "src/components/features/Reports/*"
            ],
            "@/network/*": [
                "src/components/features/Network/*"
            ],
            "@/recon/*": [
                "src/components/features/Recon/*"
            ],
            "@/settings/*": [
                "src/components/features/Settings/*"
            ],
            // Shared типы и константы
            "@/shared/*": [
                "../shared/*"
            ],
            "@/shared/types/*": [
                "../shared/types/*"
            ],
            "@/shared/constants/*": [
                "../shared/constants/*"
            ],
            // API сервисы
            "@/api/*": [
                "src/services/*"
            ],
            "@/api/network": [
                "src/services/networkApi"
            ],
            "@/api/scanner": [
                "src/services/scannerApi"
            ],
            "@/api/recon": [
                "src/services/reconApi"
            ],
            "@/api/reports": [
                "src/services/reportsApi"
            ],
            // CSS модули и стили
            "*.module.css": [
                "src/types/css-modules.d.ts"
            ]
        },
        // === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "removeComments": false,
        "importHelpers": true,
        "downlevelIteration": true
    },
    // === ВКЛЮЧЕННЫЕ ФАЙЛЫ ===
    "include": [
        "src/**/*",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.json",
        "src/**/*.vue",
        "src/**/*.css",
        "src/**/*.scss",
        "src/**/*.sass",
        "src/**/*.less",
        "src/**/*.svg",
        "../shared/**/*",
        "vite.config.ts",
        "tailwind.config.js"
    ],
    // === ИСКЛЮЧЕННЫЕ ФАЙЛЫ ===
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "public",
        "coverage",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.spec.tsx",
        "**/*.test.tsx",
        "cypress",
        "playwright",
        "e2e",
        "storybook-static",
        ".storybook",
        "vite.config.*.timestamp-*"
    ],
    // === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ КОМПИЛЯТОРА ===
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "node"
        }
    },
    // === НАСТРОЙКИ ДЛЯ VITE ===
    "vite": {
        "resolve": {
            "alias": {
                "@": "./src",
                "@/shared": "../shared"
            }
        }
    }
}